<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@android:color/transparent" >
    <TextView
        android:id="@+id/customPickerUpperBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/timer_custom_picker_upper_arrow"/>
    <TextView
        android:id="@+id/customPickerContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        android:textSize="@dimen/time_picker_text_size"/>
    <TextView
        android:id="@+id/customPickerLowerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/timer_custom_picker_lower_arrow"/>
</LinearLayout>